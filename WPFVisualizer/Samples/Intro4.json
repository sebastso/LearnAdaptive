    {
      "type": "TextBlock",
      "text": "Passengers",
      "weight": "bolder",
      "isSubtle": false
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "$data": "{passengers}",
          "text": "{name}",
          "spacing": "none"
        }
      ]
    },
    {
      "type": "Container",
      "$data": "{departingFlight}",
      "items": [
        {
          "type": "TextBlock",
          "text": "{stops} Stops",
          "weight": "bolder",
          "spacing": "medium"
        },
